{% from "macros/fields.html" import render_text_field, render_select_field, render_form_fields, render_password_field, render_checkbox_field %}
{% extends "layout.jinja2" %}

{% block title %}
  {% if facility %}Manage{% else %}Add{% endif %} An Facility
{% endblock %}

{% block content %}
  <div class="container">
    <h1>{% if facility %}Manage{% else %}Add{% endif %} A Facility</h1>
    <form name="facility_manage" method="post" novalidate class="form">
        <div class="form__container">
          {{ form.csrf_token }}
          {{ render_text_field(form.name) }}
          {{ render_text_field(form.description) }}
          {{ render_text_field(form.avatar) }}
          {{ render_select_field(form.organization_id) }}
          <hr>
          {{ render_form_fields(form.address_id, ignore_csrf_field=True, wrap_with_fieldset=True) }}
          {{form.hidden_tag()}}
        </div>
        <div>
            <input type="submit">
        </div>
      </form>
  </div>
{% endblock %}