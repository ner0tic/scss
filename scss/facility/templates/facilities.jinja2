{% from 'components/table.html' import table_header %}
{% from 'components/pagination.html' import pagination %}
{% from 'components/search.html' import search %}

<div class="panel panel-default">
    <div class="panel-heading">
        {{ search('Search for a facility') }}
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            {{ table_header(datatable, actions=True) }}
            <tbody>
                {% for a in datatable.query.items %}
                    <tr>
                        <td>{{ f.name }}</td>
                        <td>{{ f.organization_id }}</td>
                        <td>{{ f.created_at }}</td>
                        <td>
                            {% set dialogue = 'Are you sure you want to delete {f.name}?' %}
                            <a data-confirm data-dialogue="{{ dialogue }}" class="btn btn-default btn-xs" href="{{ url_for('.'+request.blueprint+'_delete', id=f.id) }}">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-default btn-xs" href="{{ url_for('.'+request.blueprint+'_manage', id=f.id) }}">
                                <i class="fa fa-pencil"></i>
                            </a>
                        </td>
                        <td>
                            <a class="btn btn-default btn-xs" href="{{ url_for('.'+request.blueprint+'_show', id=f.id) }}">
                                <i class="fa fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="{{ datatable.colspan }}">No results found for: {{ request.values.get('query') }}</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        {{ pagination(datatable.query, datatable.limits) }}
    </div>
</div>