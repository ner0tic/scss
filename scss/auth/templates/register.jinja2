{% from "macros/fields.html" import render_text_field, render_password_field, render_checkbox_field, render_form_field %}
{% extends "layout.jinja2" %}

{% block content %}
  <div class="container">
    <h1>Register</h1>
    {% if msg != None %}<p>{{msg}}</p>{% endif %}
    <form method="POST" action="{{ request.url }}">
        <div class="form__container">
            {{ form.csrf_token }}
            {{ render_text_field(form.username) }}
            {{ render_text_field(form.email) }}
            {{ render_password_field(form.password) }}
            {{ render_password_field(form.confirm) }}
            {{ render_checkbox_field(form.accept_tos) }}
            <hr>
            {{ render_text_field(form.first_name) }}
            {{ render_text_field(form.last_name) }}
            {{ render_form_field(form.address_id) }}
            <div class="panel-footer">
                <button type="submit" class="btn btn-default">
                    <i class="fa fa-check"></i> Submit
                </button>
            </div>
        </div>
    </form>
  </div>
{% endblock %}