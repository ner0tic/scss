{% extends "layout.jinja2" %}

{% block content %}
  <table id="data" class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Abbreviation</th>
        <th>Description</th>
        <th>Children</th>
        <th>Parent</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {% for organization in organizations %}
        <tr>
          <td>{{ organization.name }}</td>
          <td>{{ organization.short_name }}</td>
          <td>{{ organization.description | truncate(30) }}</td>
          <td>{{ organization.children | length }}</td>
          {% if organization.parent is not none %}
            <td><a href={{ url_for("organization_show", organization_id=organization.parent.id) }}>{{ organization.parent.name }}</a></td>
          {% else %}
            <td></td>
          {% endif %}
          <td>
            <a href="{{ url_for("organization_edit", organization_id=organization.id) }}">edit</a>
            <a href="{{ url_for("organization_delete", organization_id=organization.id) }}">delete</a>
        </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}