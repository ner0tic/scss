{% from "macros/fields.html" import render_text_field, render_select_field %}
{% extends "layout.jinja2" %}

{% block content %}
  <div class="container">
    <h1>Add An Organization</h1>
    {% if msg != None %}<p>{{msg}}</p>{% endif %}
    <form name="add_organization" method="post" novalidate class="form">
        <div class="form__container">
            {{ render_text_field(form.organization_name) }}
            {{ render_text_field(form.organization_short_name) }}
            {{ render_text_field(form.organization_description) }}
            {{ render_select_field(form.organization_parent) }}
            {{form.hidden_tag()}}
        </div>
        <div>
            <input type="submit">
        </div>
  </div>
{% endblock %}