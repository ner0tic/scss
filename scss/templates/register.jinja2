{% from "macros/fields.html" import render_text_field, render_select_field %}
{% extends "layout.jinja2" %}

{% block content %}
  <div class="container">
    <h1>Register</h1>
    {% if msg != None %}<p>{{msg}}</p>{% endif %}
    <form name="register" method="post" novalidate class="form">
        <div class="form__container">
			{{ render_text_field(form.first_name) }}
			{{ render_text_field(form.last_name) }}
            {{ render_text_field(form.username) }}
            {{ render_text_field(form.email) }}
            {{ render_text_field(form.password) }}
			{{ render_text_field(form.confirm_password) }}
			{{ render_text_field(form.avatar) }}
            {{ render_form_field(form.address_id) }}
            {{form.hidden_tag()}}
        </div>
        <div>
            <input type="submit">
        </div>
  </div>
{% endblock %}